{
    "manifest_version": 2,
    "name": "__MSG_name__",
    "version": "6.0.0",
    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": "img/icon48.png",
        "default_title": "__MSG_name__"
    },
    "background": {
        "page": "html/background.html"
    },
    "chrome_settings_overrides": {
        "homepage": "https://www.qwant.com/?client=ext-firefox",
        "search_provider": {
            "name": "Qwant",
            "keyword": "q",
            "search_url": "https://www.qwant.com/?q={searchTerms}&client=ext-firefox",
            "favicon_url": "https://www.qwant.com/favicon.ico",
            "suggest_url": "https://api.qwant.com/api/suggest/?q={searchTerms}&client=opensearch&lang=__MSG_locale__",
            "is_default": true
        }
    },
    "permissions": [
        "https://*.qwant.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.qwant.com/*"
            ],
            "css": [
                "css/no-popin.css"
            ]
        }
    ]
}
